<div class="webbody clearfix">
    {{> menuBar }}
    <div class="mtcontent" id="mt-container">
        <div class="me-page">
            <div class="img-name">
                <span class="me-img">
                    <img src="http://placehold.it/40x40/09f/fff">
                </span>
                <label>{{user.name}}</label>
            </div>
            <div class="tabs">
                <ul class="nav nav-tabs">
                    <li class="active">
                        <a href="#my-collect">我的收藏</a>
                    </li>
                    <li>
                        <a href="#my-pub">我的发布</a>
                    </li>
                </ul>
                <div id="tab-content"></div>
            </div>
            <button id="me-setting" class="setting btn hide">
                <i class="fa fa-cog"></i>
                个人设置
            </button>
        </div>
    </div>
</div>
<script type="text/javascript" src="/js/me.js"></script>
<script type="text/x-handlebars" id="my-collect-tpl">
    <div class="content">
        \{{#if collections}}
            show collections
        \{{^}}
            没有收藏～
        \{{/if}}
    </div>
</script>
<script type="text/x-handlebars" id="my-pub-tpl">
    <div class="content">
        \{{#if pubs}}
            show pubs
        \{{^}}
            没有发布过帖子～
        \{{/if}}
    </div>
</script>
